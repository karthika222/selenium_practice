using OpenQA.Selenium;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Practice.Pages
{
    public class LoginPage
    {
        private readonly IWebDriver driver;

        public LoginPage(IWebDriver driver)
        {
            this.driver = driver;
        }
        private IWebElement LoginLink => driver.FindElement(By.Id("loginLink"));
        private IWebElement UserName => driver.FindElement(By.Id("UserName"));
        private IWebElement Password => driver.FindElement(By.Id("Password"));
        // driver.FindElement(By.input())
        private IWebElement LoginButton => driver.FindElement(By.Id("loginIn"));
        public void click(IWebDriver driver)
        {
            LoginLink.Click();  
        }
        public void Login(string username, string password)
        {
            UserName.SendKeys(username);
            Password.SendKeys(password);
            LoginButton.Submit();
        }

    }
}
