using OpenQA.Selenium;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace TestProject1.Pages
{
    public class demo
    {
        private readonly IWebDriver driver;
        public demo(IWebDriver driver)
        {
            this.driver = driver;
        }
       IWebElement ll=>driver.FindElement(By.Id("loginLink"));

        IWebElement un => driver.FindElement(By.Name("UserName"));
        
        IWebElement pass=>driver.FindElement(By.Id("Password"));

        IWebElement sub=> driver.FindElement(By.CssSelector("input[type='submit']"));

        public void clicklogin(IWebDriver driver)
        {
            ll.Click();
        }
        public void login(string n, string p)
        {
            un.SendKeys(n); 
            pass.SendKeys(p);
            sub.Submit();   
        }


    }
}
